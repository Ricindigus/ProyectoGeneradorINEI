<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="@dimen/margen_medium"
    android:background="@color/greyBluePrimary"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TextView
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:text="UBICACION GEOGRÁFICA"
    android:textColor="@color/colorIcons"
    android:textStyle="bold"
    android:gravity="center"
    android:background="@color/greyBluePrimaryDark"/>
<LinearLayout
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DEPARTAMENTO"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/greyBluePrimary"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/greyBluePrimary"/>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:id="@+id/ubicacion_sp_departamento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="PROVINCIA"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/greyBluePrimary"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/greyBluePrimary"/>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:id="@+id/ubicacion_sp_provincia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="DISTRITO"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/greyBluePrimary"
                android:gravity="center_vertical"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/greyBluePrimary"/>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginLeft="10dp">
                <Spinner
                    android:id="@+id/ubicacion_sp_distrito"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
</LinearLayout>