<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margen_small"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/formulario_sp_textview"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TEXTO SUBPREGUNTA"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/greyBluePrimary"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/margen_small"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <EditText
                android:visibility="gone"
                android:id="@+id/formulario_sp_edittext"
                android:paddingLeft="@dimen/padding_small"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="numberPassword"
                android:background="@drawable/sumaedit_edittext_limpio"
                />
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/formulario_sp_spinner_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:id="@+id/formulario_sp_spinner"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:drawSelectorOnTop="true"/>
                </android.support.v7.widget.CardView>
                <EditText
                    android:id="@+id/formulario_sp_especifique"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="@dimen/margen_small"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:hint="Especifique"
                    android:enabled="false"
                    android:inputType="numberPassword"
                    android:background="@drawable/edittext_disabled"
                    />
            </LinearLayout>
        </LinearLayout>
        <CheckBox
            android:visibility="gone"
            android:id="@+id/formulario_sp_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO TIENE"
            android:layout_marginLeft="@dimen/margen_small"
            android:textStyle="bold"/>
    </LinearLayout>
</android.support.v7.widget.CardView>